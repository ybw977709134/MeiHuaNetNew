<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vendor_detail_all_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_back" />

    <ScrollView
        android:id="@+id/vendor_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 公司标题 -->

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_margin"
                android:layout_marginRight="@dimen/detail_margin"
                android:layout_marginTop="8dp"
                android:textColor="@color/list_item_title_color"
                android:textSize="@dimen/item_title_font_size" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_title_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_margin"
                android:layout_marginRight="@dimen/detail_margin"
                android:textColor="@color/list_item_title_color"
                android:textSize="@dimen/item_date_font_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_margin"
                android:layout_marginRight="@dimen/detail_margin"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/vendor_detail_logoimg"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/vendor_detail_openyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_item_summary_color"
                        android:textSize="@dimen/item_date_font_size" />

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/vendor_detail_employeeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_item_summary_color"
                        android:textSize="@dimen/item_date_font_size" />
                </LinearLayout>
            </LinearLayout>
            <!-- 公司简介 -->

            <com.MeiHuaNet.view.TextViewFont
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="@string/profileIntro"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_content_font_size"
                android:background="@drawable/text_line_bg" />


            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_ProfileIntro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_margin"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />

            <!-- 联系方式 -->

            <com.MeiHuaNet.view.TextViewFont
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginTop="5dp"
                android:text="@string/contact"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_content_font_size"
                android:background="@drawable/text_line_bg" />


            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_address"
                style="@style/contact_text_layout" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_phone"
                style="@style/contact_text_layout" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_fax"
                style="@style/contact_text_layout" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_email"
                style="@style/contact_text_layout" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_post"
                style="@style/contact_text_layout" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/vendor_detail_mobile"
                style="@style/contact_text_layout" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>