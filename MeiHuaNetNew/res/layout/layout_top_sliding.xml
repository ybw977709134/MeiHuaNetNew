<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/body_top_bg" >

    <ImageView
        android:id="@+id/title_left_btn"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/title_left_margin"
        android:src="@drawable/sliding_btn" />
    
    <TextView 
        android:id="@+id/title_cut_line"
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/title_left_btn"
        android:layout_marginLeft="@dimen/title_left_margin"
        android:background="@drawable/body_top_cut_line" />
    
    <com.MeiHuaNet.view.TextViewFont
        android:id="@+id/title_mid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_cut_line"
        android:layout_marginLeft="@dimen/title_left_margin"
        android:layout_centerVertical="true"
        android:textColor="@color/title_font_color"
        android:textSize="@dimen/title_font_size" />
    
    <ImageView 
        android:id="@+id/title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_right_margin"/>

</RelativeLayout>