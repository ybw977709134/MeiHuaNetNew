<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recruit_detail_all_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_back" />

    <ScrollView
        android:id="@+id/recruit_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- logo,公司名称 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="5dp" >

                <ImageView
                    android:id="@+id/recruit_detail_logo"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/recruit_detail_jobname"
                        style="@style/recruit_item_title_layout" />

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/recruit_detail_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_item_date_color"
                        android:textSize="@dimen/item_date_font_size" />

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/recruit_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_item_date_color"
                        android:textSize="@dimen/item_date_font_size" />

                    <com.MeiHuaNet.view.TextViewFont
                        android:id="@+id/recruit_detail_employename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_item_date_color"
                        android:textSize="@dimen/item_date_font_size" />
                </LinearLayout>
            </LinearLayout>

            <!-- 职位描述 -->

            <com.MeiHuaNet.view.TextViewFont
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="@string/position_intro"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_content_font_size"
                android:background="@drawable/text_line_bg" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_detail_position_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />
            <!-- 公司简介 -->

            <com.MeiHuaNet.view.TextViewFont
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="@string/profileIntro"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_content_font_size"
                android:background="@drawable/text_line_bg" />


            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_detail_profileintro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_detail_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_detail_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_detail_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>