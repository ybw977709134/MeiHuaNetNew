<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recruit_item_all_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout style="@style/list_item_linearlayout"
        android:paddingLeft="5dp"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/recruit_item_logo"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:orientation="vertical">
            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_item_jobname"
                style="@style/recruit_item_title_layout"/>
            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_item_city"
                style="@style/recruit_item_content_layout"/>
            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/recruit_item_employename"
                style="@style/recruit_item_content_layout"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>