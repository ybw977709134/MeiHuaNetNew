<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/info_item_all_layout"
        style="@style/list_item_linearlayout"
        tools:ignore="UselessParent" >

        <com.MeiHuaNet.view.TextViewFont
            android:id="@+id/info_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title_color"
            android:textSize="@dimen/item_title_font_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/info_item_img"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <com.MeiHuaNet.view.EllipsizingTextView
                android:id="@+id/info_item_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="5"
                android:paddingLeft="5dp"
                android:textColor="@color/list_item_summary_color"
                android:textSize="@dimen/item_content_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/info_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_date_font_size" />

            <com.MeiHuaNet.view.TextViewFont
                android:id="@+id/info_item_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_item_date_color"
                android:textSize="@dimen/item_date_font_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>